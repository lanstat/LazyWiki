@import "globals.styl"

#container1
  height 100%
  width 100%
  overflow hidden

#container2
  height 100%
  overflow-x hidden

#menuBar
  font-family 'OpenSansBold'
  padding 20px 10px 20px
  font-size 12px
  position relative
  min-height 100vh
  margin-top 60px
  a
    color: $lightBlack
  .repo-link
    position absolute
    text-align center
    bottom 60px
    left 0
    width 100%


#tiledArticles
  .row
    padding 0 15px 0 15px
    .col-sm-3
      padding 0

.wiki-day
  position relative
  height 215px
  .black-overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #000000
    opacity 0.7
    cursor pointer
  .number-day
    position absolute
    top 15%
    left 0
    font-size 90px
    color $white
    opacity 0.2
    text-align center
    width  100%
    cursor pointer


.wiki-block
  padding-right 15px
  h3
    span
      font-size 14px
  p
    font-size 12px
    padding 15px 0 15px

#dateLine
  padding 10px 15px
  a
    padding 0 10px
  .fa
    color $gray
    font-size 8px

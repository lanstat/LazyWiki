@import "globals.styl"

#article
  position relative
  height 100%
  h1
    text-align center
    margin-bottom 0
  .sub-title
    text-align  center
    font-size 12px
    padding 0
    color #cccccc
  .read-options
    position absolute
    bottom 60px
    width 100%
    background-color $white
    p
      padding 5px 0 5px
      text-align  center
      margin 0

#wikiContent
  margin 0 50px
  border-right  1px dashed $gray
  height 100%